#!/bin/bash
extension=".local"

while getopts "d:l" option
do
    case $option in 
	d)
	    port=:$((5900+$OPTARG))
	    ;;
	l)
	    # linux
	    extension=""
	    ;;
    esac
done
shift $((${OPTIND} - 1)) 
host=$(echo $1 | sed 's|homer|crowley|g;s|starbuck|sandcastle|g;s|.local||;s|krypter|crowley|')

if [[ ${host} =~ ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$ ]]
then
    echo "success"
    extension=""
fi
echo opening vnc://${host}${extension}${port}
open vnc://${host}${extension}${port}
